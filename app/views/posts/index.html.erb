<h1>AjaxApp</h1>
<%= form_with url: "/posts", method: :post,id: "form" do |form| %>
  <%= form.text_field :content, id: "content" %>
  <%= form.submit '投稿する' , id: "submit" %>
<% end %>

<div id="list">
</div>

<% @posts.each do |post| %>
  <div class="post">
    <div class="post_date">
      投稿時間：<%= post.created_at %>
    </div>
    <div class="post_content">
      <%= post.content %>
    </div>
  </div>  
<% end %>

